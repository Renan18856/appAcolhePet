<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/formulario_denuncia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/laranja"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/margem_tela"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Faça a Denúncia"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <!-- Data -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolha a data de hoje:"
            android:gravity="left"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>
        <DatePicker
            android:id="@+id/txtAGEData"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:calendarTextColor="@color/white"
            android:background="@color/laranjaClaro"
            android:headerBackground="@color/laranjaEscuro"
            />

        <!-- Título: Localização do cachorro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Localização do cachorro"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <!-- Número residencia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Numero residencia:"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGENumero"
            android:textColor="@color/white"
            />

        <!-- Rua -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Rua:"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGERua"
            android:textColor="@color/white"
            />

        <!-- Bairro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Bairro:"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGEBairro"
            android:textColor="@color/white"
            />

        <!-- Cidade -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Cidade:"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGECidade"
            android:textColor="@color/white"
            />

        <!-- Descrição do problema: -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Descrição do problema:"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGEDescricaoProblema"
            android:textColor="@color/white"
            />

        <!-- Situação -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Situação"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGESituacao"
            android:textColor="@color/white"
            />

        <!-- Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Seu Nome"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGENome"
            android:textColor="@color/white"
            />


        <!-- Celular do denunciante -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Seu celular"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:id="@+id/txtAGECelular"
            android:textColor="@color/white"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/btAGESalvarDenuncia"
            android:text="Salvar Denúncia"
            android:textSize="25dp"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>