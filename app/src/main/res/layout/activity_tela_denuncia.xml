<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_denuncia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descreva o problema"
        android:gravity="left"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:translationY="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/editprob"
        android:textSize="40sp"
        android:translationY="-530dp"
        android:layout_marginTop="640dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="digite o endereÃ§o"
        android:textSize="25sp"
        android:translationY="-450dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-220dp"
        android:text="URGENTE"
        android:textColor="@color/black"
        android:buttonTint="@color/red"
        android:layout_gravity="end|bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="25sp"
        android:translationY="-290dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/img_one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:clickable="true"
        android:translationX="20dp"
        android:translationY="-200dp"
        app:srcCompat="@drawable/camera" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:translationX="312dp"
        android:translationY="-50dp"
        app:icon="@android:drawable/ic_menu_send"
        app:iconTint="#FFFFFF" />
</LinearLayout>