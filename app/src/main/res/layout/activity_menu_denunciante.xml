<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_denunciante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/botao1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:drawableStart='@drawable/cruz'
        android:textSize="40sp"
        android:translationX="330dp"
        android:translationY="640dp"
        app:icon="@drawable/cruz"

        />

    <View
        android:background="#B67700"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_marginStart="-420dp"
        android:translationY="-20dp"
        android:translationX="330dp"
        android:layout_gravity="top" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:translationX="-140dp"
        android:translationY="21dp"
        app:srcCompat="@drawable/menu" />

</LinearLayout>

